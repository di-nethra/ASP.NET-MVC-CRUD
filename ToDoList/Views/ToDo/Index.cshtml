@model IEnumerable<ToDo>

<div class="container" p-3>
    <div class="row pt-4">
    <div class="col pt-6">
        <h2 class="text-primary">Dinethrex ToDo List</h2>
    </div>
    <div class="col pt-6 text-right">
        <a asp-controller="ToDo" asp-action="CreateToDO">  <button class="btn btn-primary">Add New Task</button></a>
    </div>

        </div>

    <br />
    @if (Model.Count() > 0) { 
    <table class="table table-bordered table-striped" style="width:100%" >
        <thead>
            <tr>
                <th>
                    ID
                </th>
                <th>
                    Task
                </th>
                <th>
                    Start Time
                </th>
                <th>
                    End Time
                </th>
            </tr>
        </thead>

        <tbody>


            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @item.Id
                </td>
                <td>
                    @item.Task
                </td>
                <td>
                    @item.FromTime
                </td>
                <td>
                    @item.ToTime
                </td>
            </tr>
                    }

             
            </tbody>

    </table>
    }
</div>
